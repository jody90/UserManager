<assembly>
	<id>bin</id>
	<formats>
		<format>tar</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<includes>
				<include>start.bat</include>
				<include>start.sh</include>
				<include>stop.sh</include>
				<include>usermanager.sh</include>
				<include>migration.bat</include>
				<include>migration.sh</include>
			</includes>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${basedir}/config</directory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/database</directory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/logs</directory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>